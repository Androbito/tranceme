<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="211dp"
    android:background="@drawable/stereo"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="211dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:background="@drawable/slider"
        android:orientation="horizontal"
        android:weightSum="100" >

        <Button
            android:id="@+id/btnShareFb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok" />

        <Button
            android:id="@+id/btnCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:layout_alignTop="@+id/btnShareFb"
            android:background="@drawable/cancel" />

        <TextView
            android:id="@+id/txtTitleTweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnCloseDialog"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="Share on Facebook "
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </RelativeLayout>

    <EditText
        android:id="@+id/txtRespondFb"
        android:layout_width="fill_parent"
        android:layout_height="146dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:inputType="textMultiLine"
         android:gravity="top"
         android:textStyle="italic"
        android:maxLength="140" >
       
         <requestFocus />
        
    </EditText>
</LinearLayout>
</LinearLayout>